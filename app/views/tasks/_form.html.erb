<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <% if @task.new_record? %>
    <%= f.submit 'Create!' %>
  <% else %>
    <%= f.submit 'Update!' %>
  <% end %>
<% end %>
